<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h4 class="text-center">ADMIN PANEL</h4>
            <h6 class="card-title text-center">Sign In</h6>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin"}) do |f| %>
              <div class="form-label-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address", required: true %>
                <label for="inputEmail">Email address</label>
              </div>

              <div class="form-label-group">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password", required: true %>
                <label for="inputPassword">Password</label>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="custom-control custom-checkbox mb-3">
                  <%= f.check_box :remember_me, class: "custom-control-input" %>
                  <%= f.label :remember_me, class: "custom-control-label" %>
                </div>
              <% end %>
              
              <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
              <% end %>
              <%#= render "devise/shared/links" %>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>