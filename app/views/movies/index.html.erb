<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table border=1>
  <thead>
    <tr>
      <th>Title</th>
      <th>Release year</th>
      <th>Casting</th>
      <th>Directors</th>
      <th>Producers</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.release_year.roman %></td>
        <td><%= movie_casting(movie) %></td>
        <td><%= movie_directors(movie) %></td>
        <td><%= movie_producers(movie) %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

