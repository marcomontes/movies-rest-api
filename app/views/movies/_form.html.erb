<%= form_with(model: movie, local: true) do |form| %>
  <% if movie.errors.any? %>
    <div class="alert alert-warning text-center" role="alert">
      <h4><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h4>

      <ul>
      <% movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :title, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :release_year, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.number_field :release_year, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label 'Casting (Actors/Actresses)', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select :casting_ids, people_for_select, {}, { multiple: true, class: 'select2 form-control' }  %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label 'Directors', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select :director_ids, people_for_select, {}, { multiple: true, class: 'select2 form-control' }  %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label 'Producers', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select :producer_ids, people_for_select, {}, { multiple: true, class: 'select2 form-control' }  %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10">
      <%= form.submit "SAVE", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
